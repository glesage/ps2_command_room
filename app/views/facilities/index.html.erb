<p id="notice"><%= notice %></p>

<h1>Listing Facilities</h1>

<table>
  <thead>
    <tr>
      <th>Faction</th>
      <th>Map</th>
      <th>Name</th>
      <th>Position</th>
      <th>Ps2</th>
      <th>Type name</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.faction %></td>
        <td><%= facility.map_id %></td>
        <td><%= facility.name %></td>
        <td><%= facility.position_id %></td>
        <td><%= facility.ps2_id %></td>
        <td><%= facility.type_name %></td>
        <td><%= facility.type_id %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

