<p id="notice"><%= notice %></p>

<h1>Listing Hexes</h1>

<table>
  <thead>
    <tr>
      <th>Facility</th>
      <th>Position</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hexes.each do |hex| %>
      <tr>
        <td><%= hex.facility_id %></td>
        <td><%= hex.position_id %></td>
        <td><%= hex.type_id %></td>
        <td><%= link_to 'Show', hex %></td>
        <td><%= link_to 'Edit', edit_hex_path(hex) %></td>
        <td><%= link_to 'Destroy', hex, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

